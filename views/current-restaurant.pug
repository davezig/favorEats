extends layout.pug

block content

  h1= restaurant.name
    div Category: #{restaurant.category}
    div=restaurant.description
    div=restaurant.streetAdress
    div=restaurant.city
    div=restaurant.state
    div=restaurant.zipCode
    div= restaurantRating
      img(src=restaurant.img)
    div(id="all-comments")
      each comment in restaurantComments
        div= comment.comment
    h1 How was it?
    form(method="post" action="/restaurants/comment" id=restaurant.id class="comment-form")
      div
        input(type="radio" name="rate" id="star5" value="1")
        input(type="radio" name="rate" id="star4" value="2")
        input(type="radio" name="rate" id="star3" value="3")
        input(type="radio" name="rate" id="star2" value="4")
        input(type="radio" name="rate" id="star1" value="5")
      div
        textarea(name="comment" rows="18" cols="70" class="user-comment")
      div
        button(type="submit" class="form-button") Submit Comment
    script(src="/javascripts/index.js")

