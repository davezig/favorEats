extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
  h1 Welcome, #{currentUser.username}
  h2 Visited Restaurants
    //- each restaurant in visitedRestaurants
    //-   div
    //-     a(href='/restaurants/:id')= restaurant.name
    - var n = 0;
    while n < 3
      - ++n
      div
         a(href=`/restaurant/${visitedRestaurants[n].id}`)= visitedRestaurants[n].name

  h2 Want To Visit
    - var n = 0;
    while n < 3
      - ++n
      div
        a(href=`/restaurant/${wantToVisit[n].id}`)= wantToVisit[n].name
  div
    h2 Top Rated Restaurants
      each restaurant in highestRated
        div
          a(href=`/restaurant/${restaurant.Restaurant.id}`)= restaurant.Restaurant.name

